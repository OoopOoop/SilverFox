    <!--
        Foreground="{Binding ElementName=ServicesGrid,
        Path=Background,
        Converter={StaticResource ForegroundChangeColor}}"
    -->



    <Page.Resources>
        <shared:BackgroundToForegroundConverter x:Key="ForegroundChangeColor" />
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{Binding ElementName=MainGrid, Path=Background, Converter={StaticResource ForegroundChangeColor}}" />
        </Style>
    </Page.Resources>

    <Grid x:Name="MainGrid" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   HorizontalAlignment="Center"
                   Text="Original" />
        <TextBlock Grid.Row="0"
                   Grid.Column="1"
                   HorizontalAlignment="Center"
                   Text="Edit" />
        <TextBlock Grid.Row="1"
                   Grid.ColumnSpan="2"
                   Margin="10"
                   HorizontalAlignment="Center"
                   Text="Display Name" />


        <TextBlock x:Name="OriginalNameTxt"
                   Grid.Row="2"
                   Text="{Binding OriginalDisplayName}" />


        <TextBox x:Name="NewNameTxtBox"
                 Grid.Row="2"
                 Grid.Column="1" />

        <TextBlock Grid.Row="3"
                   Grid.ColumnSpan="2"
                   Margin="10"
                   HorizontalAlignment="Center"
                   Text="Descrtiption" />



        <TextBlock x:Name="OriginalDescriptTxt"
                   Grid.Row="4"
                   Text="{Binding OriginalDescription}"
                   TextWrapping="Wrap" />
        <TextBox x:Name="NewDescription"
                 Grid.Row="4"
                 Grid.Column="1" />

        <TextBlock Grid.Row="5"
                   Grid.ColumnSpan="2"
                   Margin="10"
                   HorizontalAlignment="Center"
                   Text="Start Type" />

        <TextBlock x:Name="OriginalStartTxt"
                   Grid.Row="6"
                   Text="{Binding OriginalStartType}" />


        <StackPanel Grid.Row="7"
                    Grid.ColumnSpan="2"
                    Margin="3"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <Button Margin="2"
                    Command="{Binding SaveChangesCommand}"
                    Content="Save" />
            <Button Margin="2"
                    Command="{Binding CancelCommand}"
                    Content="Cancel" />
        </StackPanel>
    </Grid>

</Page>