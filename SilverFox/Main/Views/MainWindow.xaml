<Page x:Class="Main.Views.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Main.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="MainWindow"
      Width="Auto"
      Height="Auto"
      DataContext="{Binding MainViewModel,
                            Source={StaticResource Locator}}"
      mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="EnableBtnStyle" TargetType="Button">
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedItems.Count, ElementName=ServicesGrid}" Value="0">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>



    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    Orientation="Horizontal">


            <Button Name="GoToAddWinBtn"
                    Width="80"
                    Height="20"
                    Command="{Binding NavigateAddWindowCommand}"
                    Content="Add" />

            <Button x:Name="DeleteSelectedSerBtn"
                    Width="90"
                    Height="20"
                    Margin="5,0,0,0"
                    Command="{Binding RemoveServiceCommand}"
                    CommandParameter="{Binding SelectedItems,
                                               ElementName=ServicesGrid}"
                    Content="Delete Selected"
                    Style="{StaticResource EnableBtnStyle}" />

            <Button x:Name="RefreshSelectedSerBtn"
                    Width="90"
                    Height="20"
                    Margin="5,0,0,0"
                    Command="{Binding RefreshStatusCommand}"
                    CommandParameter="{Binding SelectedItems,
                                               ElementName=ServicesGrid}"
                    Content="Refresh Selected"
                    Style="{StaticResource EnableBtnStyle}" />


            <Button x:Name="RefreshAllSerBtn"
                    Width="80"
                    Height="20"
                    Margin="5,0,0,0"
                    Command="{Binding RefreshStatusAllCommand}"
                    Content="Refresh All"
                    Style="{StaticResource EnableBtnStyle}" />

            <Button Name="ClearMultiselBtn"
                    Width="80"
                    Height="20"
                    Margin="5,0,0,0"
                    Click="ClearMultiselBtn_Click"
                    Content="Clear Selection"
                    Style="{StaticResource EnableBtnStyle}" />
        </StackPanel>


        <StackPanel Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Margin="5"
                    Orientation="Vertical">
            <TextBlock HorizontalAlignment="Center" Text=" Status:" />

            <Button x:Name="StartServiceBtn"
                    Margin="5"
                    Command="{Binding StartServiceCommand}"
                    CommandParameter="{Binding SelectedItems,
                                               ElementName=ServicesGrid}"
                    Content="Start"
                    Style="{StaticResource EnableBtnStyle}" />


            <Button x:Name="StopServiceBtn"
                    Margin="5"
                    Command="{Binding StopServiceCommand}"
                    CommandParameter="{Binding SelectedItems,
                                               ElementName=ServicesGrid}"
                    Content="Stop"
                    Style="{StaticResource EnableBtnStyle}" />
            <!--<Button Margin="5" Content="Pause" />
            <Button Margin="5" Content="Resume" />-->
        </StackPanel>

        <DataGrid x:Name="ServicesGrid"
                  Grid.Row="1"
                  Grid.RowSpan="2"
                  Grid.Column="0"
                  Margin="0,5,0,0"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  ColumnWidth="*"
                  ItemsSource="{Binding SelectedServicesCollection,
                                        Mode=TwoWay}"
                  SelectionMode="Extended">


            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <EventSetter Event="MouseEnter" Handler="MouseEnterHandler" />
                    <EventSetter Event="PreviewMouseDown" Handler="PreviewMouseDownHandler" />
                </Style>
            </DataGrid.RowStyle>


            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridCell}">
                    <Style.Triggers>
                        <Trigger Property="DataGridCell.IsSelected" Value="True">
                            <Setter Property="Background" Value="#CCDAFF" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTemplateColumn Width="Auto" Header="Add">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox x:Name="checkBox"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      IsChecked="{Binding IsSelected,
                                                          Mode=TwoWay,
                                                          RelativeSource={RelativeSource FindAncestor,
                                                                                         AncestorType={x:Type DataGridRow}}}" />


                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="Auto" Header="Service Name">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock VerticalAlignment="Center"
                                       Text="{Binding Path=DisplayName,
                                                      Mode=TwoWay,
                                                      UpdateSourceTrigger=PropertyChanged}"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>


                <DataGridTemplateColumn Width="*" Header="Description">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=Description,
                                                      Mode=TwoWay,
                                                      UpdateSourceTrigger=PropertyChanged}"
                                       TextAlignment="Left"
                                       TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="*" Header="Status">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock VerticalAlignment="Center"
                                       Text="{Binding Path=Status,
                                                      Mode=TwoWay,
                                                      UpdateSourceTrigger=PropertyChanged}"
                                       TextAlignment="Center" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>



                <DataGridTemplateColumn Width="*" Header="Start Mode">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock VerticalAlignment="Center"
                                       Text="{Binding Path=StartMode,
                                                      Mode=TwoWay,
                                                      UpdateSourceTrigger=PropertyChanged}"
                                       TextAlignment="Center" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>




            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2"
                    Grid.Column="1"
                    Margin="5"
                    Orientation="Vertical">
            <TextBlock HorizontalAlignment="Center" Text="Startup:" />


            <RadioButton Margin="5,10,5,5"
                         Command="{Binding RadioBtnStatusCommand}"
                         CommandParameter="Automatic"
                         Content="Automatic"
                         GroupName="startUp" />

            <RadioButton Margin="5"
                         Command="{Binding RadioBtnStatusCommand}"
                         CommandParameter="Manual"
                         Content="Manual"
                         GroupName="startUp" />

            <RadioButton Margin="5"
                         Command="{Binding RadioBtnStatusCommand}"
                         CommandParameter="Disabled"
                         Content="Disabled"
                         GroupName="startUp" />



            <Button x:Name="changeStatusBtn"
                    Margin="5,15,5,0"
                    Command="{Binding ChangeStatusCommand}"
                    CommandParameter="{Binding SelectedItems,
                                               ElementName=ServicesGrid}"
                    Content="Apply"
                    Style="{StaticResource EnableBtnStyle}" />




            <!--<Button.CommandParameter>
                <MultiBinding Converter="{StaticResource StartupStatusConverter}">
                    <Binding Path="SelectedItems" ElementName="ServicesGrid"/>
                    <Binding Path="Content" ElementName="startUp"/>
                </MultiBinding>
            </Button.CommandParameter>-->




        </StackPanel>
    </Grid>
</Page>
